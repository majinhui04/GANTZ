/* miniprogram/pages/shortcut/shortcut.wxss */
page {
  background-color: #333;
}
.shortcut-wrap {
  min-height: 100%;
}
.shortcut-list {
  padding: 30rpx;
  align-items: flex-start;
  position: relative;
}
.shortcut-item {
  font-size: 36rpx;
  position: relative;
  color: #FFF;
  border-radius: 20rpx;
  min-width: 200rpx;
  min-height: 100rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-image: linear-gradient(135deg, #FF6D64, #FFAF86);
  align-items: flex-start;
  overflow: hidden;
}
.shortcut-item.weather {
  width: 60%;
  height: 280rpx;
  background-image: linear-gradient(135deg, #FF6D64, #FFAF86);
}
.icon-weather {
  z-index: 1;
  position: absolute;
  width: 300rpx;
  height: 300rpx;
  right: 0;
  bottom: 0;
  background: url('https://gw.alicdn.com/L1/723/1569403280/66/3d/17/663d177c148367de08c6603492dc1698.png') no-repeat;
  background-size: cover;
}
.shortcut-item.xxqg {
  width: 35%;
  height: 280rpx;
  background-image: linear-gradient(135deg, #41406E, #5D5D86);
}
.shortcut-item-column {
  width: 35%;
}
.shortcut-item.qinghua {
  width: 100%;
  height: 200rpx;
  background-image: linear-gradient(135deg, #6147B7, #8471C4);
}
.shortcut-item.hot{
  width: 60%;
  height: 420rpx;
  background-image: linear-gradient(135deg, #222250, #3C3C59);
}
.shortcut-item.emoji {
  width: 100%;
  height: 200rpx;
  background-image: linear-gradient(135deg, #56BB9B, #94E8C7);

}
.shortcut-item.x1 {
  width: 60%;
  height: 400rpx;
  background-image: linear-gradient(135deg, #BFCAE6, #A2B5D0);
  
}
.shortcut-item.x2 {
  width: 35%;
  height: 400rpx;
  background-image: linear-gradient(135deg, #EC6B5C, #EC6B5C);
  
}

