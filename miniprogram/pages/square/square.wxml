<!--miniprogram/pages/square/square.wxml-->
<sg-tab id="tabs" layout="fixed" source="{{tabs}}" bindselected="bindselected"></sg-tab>
<swiper circular="{{false}}" current="{{current}}" bindanimationfinish="handleChangeItem" class="square-swiper">
  <swiper-item class="tab-content" wx:for="{{tabs}}" data-id="{{index}}" wx:key="index">
    <posts class="post-wrapper" filter="{{item.filter}}" id="discover{{index}}" bindshare="bindshare"></posts>
  </swiper-item>
</swiper>
