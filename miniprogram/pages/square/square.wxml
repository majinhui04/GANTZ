<!-- 分享 -->
<view class="share-model" wx:if="{{showShareModel}}">
  <view class="share-model-content">
    <view class="share-model-content-head">分享到</view>
    <view class="share-model-content-action sg-flexbox align-center">
      <button open-type="share" class="share-btn" catchtap="hideShareModel">
        <image class="share-icon" src="/assets/img/icon-share-wechat.png"></image>
        <view class="share-text">微信</view>
      </button>
      <button  class="share-btn" style="opacity:0">
        <image class="share-icon" src="/assets/img/icon-share-wechat.png"></image>
        <view class="share-text">微信</view>
      </button>
      <button  class="share-btn" style="opacity:0">
        <image class="share-icon" src="/assets/img/icon-share-wechat.png"></image>
        <view class="share-text">微信</view>
      </button>
      <button  class="share-btn" style="opacity:0">
        <image class="share-icon" src="/assets/img/icon-share-wechat.png"></image>
        <view class="share-text">微信</view>
      </button>
    </view>
    <view class="share-model-content-foot">
