/* miniprogram/pages/login/login.wxss */
.login-bg {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  overflow: hidden;
  z-index: -1;
}
.login-bg image {
  width: 100%;
  height: 100%;
}

.login-head {
  padding-top: 280rpx;
}
.login-tips {
  color:rgba(255,255,255,0.8);
  text-align: center;
}
.login-form {
  width: 70%;
  margin: 0 auto;
  padding: 50rpx 0;
}
.login-form-field {
  border-bottom: 1px solid #fff;
  margin-bottom: 40rpx;
}
.login-form-input {
  color: #FFF;
}
.login-form-submit {
  font-size: 40rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: rgba(255,255,255,0.8);
  color: #000;
}