/* components/tab/tab.wxss */
@import "../../sharegood/index.wxss";
.voice-post-tabs {
  padding: 0 30rpx;
  height: 100rpx;
  background-color: #FFF;
}
.tabs-placeholder {
  height: 100rpx;
}
.tabs.fixed {
  position: fixed;
  width: 100%;
  left: 0;
  top:0;
  z-index: 20;
}
.voice-post-tab {
  position: relative;
  font-size: 32rpx;
  font-weight: bolder;
  width: 200rpx;
  text-align: center;
  height: 100%;
  line-height: 100rpx;
  color:#797979;
}

.voice-post-tab.active {
  font-size: 40rpx;
  color:#333;
}

.voice-post-tab.active .voice-post-tab-line {
  display: block
}

.voice-post-tab-line {
  position: absolute;
  width: 20rpx;
  height: 8rpx;
  background-color: #66c0f7;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  display: none;

}