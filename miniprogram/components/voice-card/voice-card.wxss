/* components/voice-card/voice-card.wxss */
@import "../../sharegood/index.wxss";


.share-voice-card {
    margin: 0 auto;
    width: 650rpx;
    height: 650rpx;
}

.share-voice-card-main {
    position: relative;
    height: 100%;
}

/* voice-post */
.rectangle .share-voice-card-content {
    border-radius: 28rpx 28rpx 0 0;
}

.share-voice-card-content {
    font-size: 32rpx;
    color: #FFF;
    z-index: 11;
    position: relative;
    border-radius: 28rpx;
    height: 100%;

    /* background-color: #E84992; */
    background: rgb(91, 73, 232) url('https://imguki.neoclub.cn/miaohong/outer-h5/uki-inner-h5/normal-share/sharevoice/card_bg.png?x-oss-process=image/format,png') no-repeat;
    background-size: contain;
}

.share-voice-card-content-head {
    padding: 0rpx 40rpx;
    height: 120rpx;
}

.share-voice-content-main {
    position: relative;
    height: calc(100% - 120rpx);
    overflow: hidden;
}

.share-voice-lyric {
    height: 100%;
    position: relative;
}

.share-voice-lyric-txt {
    font-size: 28rpx;
    display: block;
    width: 100%;
    text-align: center;
    opacity: 0.5;
}

.share-voice-lyric-txt.first {
    /* margin-bottom: 30rpx; */
}

.share-voice-lyric-txt.active {
    opacity: 1;
    /* color: rbga(255,255,255,1); */
    font-size: 36rpx;
}

.share-voice-free-cover {
    width: 300rpx;
    height: 300rpx;
    border-radius: 50%;
    border: 4rpx solid #FFF;
    opacity: 0.6;
    position: absolute;
    z-index: 10;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);

}

.share-voice-free-cover-icon {
    left: 50%;
    top: 50%;
    position: absolute;
    width: 240rpx;
    height: 240rpx;
    border-radius: 50%;
    z-index: 20;
    transform: translate(-50%, -50%);
}

.share-voice-type {
    font-size: 24rpx;
    width: 104rpx;
    height: 52rpx;
    background-color: rgb(22, 20, 49);
    border-radius: 10rpx;
}

.share-voice-title {
    padding: 0 20rpx;
}

.share-voice-songName {
    display: inline-block;
    vertical-align: middle;
}

.share-voice-line {
    display: inline-block;
    vertical-align: middle;
    color: rgba(255, 255, 255, 0.6);
}

.share-voice-singer {
    display: inline-block;
    vertical-align: middle;
    color: rgba(255, 255, 255, 0.6);
    font-size: 24rpx;
}

.share-voice-play-btn {
    width: 66rpx;
    height: 66rpx;
    display: block;
}

.share-voice-card-btns {
    padding: 0 40rpx;
    min-height: 220rpx;
    background-color: #FFF;
    border-radius: 0 0 28rpx 28rpx;
}

.share-voice-card-btn {
    line-height: 1;
    overflow: hidden;
}

.share-voice-card-btn-icon {
    margin: 0 auto;
    width: 140rpx;
    height: 140rpx;
    display: block;
}

.share-voice-card-btn-text {
    text-align: center;
}

.share-voice-lyric-cover {
    width: 300rpx;
    height: 300rpx;
    border-radius: 50%;
    border: 4rpx solid #FFF;
    opacity: 0.6`;
    position: absolute;
    z-index: 10;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);

}

.share-voice-lyric-cover-icon {
    position: absolute;
    width: 240rpx;
    height: 240rpx;
    border-radius: 50%;
    z-index: 20;
    transform: translate(-50%, -50%);
}


/* card over */
.mini.share-voice-card {
    margin: 0 auto;
    width: 580rpx;
    height: 400rpx;
}

.mini .share-voice-lyric-txt.first {
    /* margin-bottom: 20rpx; */
}

.mini .share-voice-lyric-txt {
    font-size: 24rpx;
}

.mini .share-voice-lyric-txt.active {
    font-size: 32rpx;
}

/* animation */
.card_bg_wave_1_wrap {
    width: 2600rpx;
    height: 152rpx;
    position: absolute;
    bottom: -60rpx;
    left: 0;
    display: none;
    background: url('data:image/png;base64,') repeat-x 0 0;
    background-size: 50% 100%;
}

.card_bg_wave_1 {
    display: block;
    float: left;
    width: 1300rpx;
    height: 152rpx;

}

.card_bg_wave_3_wrap {
    width: 2600rpx;
    height: 171rpx;
    position: absolute;
    bottom: -60rpx;
    left: 0;
    display: none;
    /* animation: wave 10s 0s infinite linear ; */
    background: url('data:image/png;base64,') repeat-x 0 0;
    background-size: 50% 100%;
}

.card_bg_wave_3 {

    width: 1300rpx;
    height: 171rpx;
    float: left;

}

.card_icon_1 {
    width: 28rpx;
    height: 28rpx;
    position: absolute;
    left: 10%;
    bottom: 60rpx;
    z-index: 20;
    display: none;
    animation: music 10s 0s infinite linear;

}

.card_icon_2 {
    left: 10%;
    width: 41rpx;
    height: 32rpx;
    position: absolute;
    bottom: -50rpx;
    /* animation: music 3s 1s infinite linear ;  */
}

.animation .card_icon_2 {
    animation: music 3s 1s infinite linear;
}

.card_icon_3 {
    left: 30%;
    width: 38rpx;
    height: 43rpx;
    position: absolute;
    bottom: -50rpx;
    /* animation: music 3s 0s infinite linear ; */
}

.animation .card_icon_3 {
    animation: music 3s 0s infinite linear;
}

.card_icon_4 {
    left: 50%;
    width: 21rpx;
    height: 36rpx;
    position: absolute;
    bottom: -50rpx;
    /* animation: music 3s 3s infinite linear ; */
}

.animation .card_icon_4 {
    animation: music 3s 3s infinite linear;
}

.card_icon_5 {
    left: 80%;
    width: 26rpx;
    height: 27rpx;
    position: absolute;
    bottom: -50rpx;
    /* animation: music 3s 0.5s infinite linear ; */
}

.animation .card_icon_5 {
    animation: music 3s 0s infinite linear;
}

.animation .card_bg_wave_1_wrap,
.animation .card_bg_wave_3_wrap {
    display: block;
    animation: wave 10s 0s infinite linear;
    animation-direction: alternate;
}

@keyframes music {
    0% {
        transform: translateY(0);
        opacity: 1;
    }

    100% {
        transform: translateY(-200rpx);
        opacity: 0;
    }
}

@keyframes wave {
    0% {
        transform: translateX(0);
    }

    50% {
        transform: translateX(-25%);
    }

    100% {
        transform: translateX(-50%);
    }
}